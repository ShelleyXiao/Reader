<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_three_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_three_icon_first"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_two_bi_one"/>

            <TextView
                android:id="@+id/tv_three_text_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="更多"
                android:textColor="@color/colorContent"
                android:textSize="12sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three_scecond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_three_icon_scecond"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_two_bi_one"/>

            <TextView
                android:id="@+id/tv_three_text_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="更多"
                android:textColor="@color/colorContent"
                android:textSize="12sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three_third"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_three_icon_third"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_two_bi_one"/>

            <TextView
                android:id="@+id/tv_three_text_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="更多"
                android:textColor="@color/colorContent"
                android:textSize="12sp"
                />


        </LinearLayout>

    </LinearLayout>

</layout>
