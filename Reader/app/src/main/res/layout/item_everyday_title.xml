<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorHomeLine"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/lv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_title_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/home_title_android"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffce3d3a"
                    android:textSize="16sp"
                    tools:text="福利"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_title_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_title_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="更多"
                    android:textColor="@color/colorTabText"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:id="@+id/iv_title_more_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/home_arrow_right"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>
