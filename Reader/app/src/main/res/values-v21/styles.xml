<resources>

    <style name="ToolBarStyleTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionBarItemBackground">@drawable/toolbarItemBackground</item>
        <item name="android:selectableItemBackground">@drawable/toolbarItemBackground</item>
        <item name="android:titleTextAppearance">@style/Toolbar.Title</item>
        <item name="android:subtitleTextAppearance">@style/Toolbar.Subtitle</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--Toolbar 标题-->
    <style name="Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18.0sp</item>
    </style>
    <!--Toolbar 副标题-->
    <style name="Toolbar.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">#9fffffff</item>
        <item name="android:textSize">9.0sp</item>
    </style>

</resources>
